    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>

    <div class="wrapper">
  
      <h2>Welcome, <%= current_cuber ? current_cuber.name : "guest" %>!</h2>
      
      <div class="pure-menu pure-menu-horizontal">
        <ul class="pure-menu-list">
          <% if logged_in? %>
            <li class="pure-menu-item"><a href="/cube_times/new"><button>Record Cube Time</button></a></li>
            <li class="pure-menu-item"><a href="/cubers/<%= current_cuber.id %>"><button>Your Stats and History</button></a></li>
            <li class="pure-menu-item"><a href="/logout"><button>Logout</button></a></li>
          <% else %>
            <li class="pure-menu-item"><a href="/signup"><button>Signup</button></a></li>
            <li class="pure-menu-item"><a href="/login"><button>Login</button></a></li>
          <% end %>
        </ul>
      </div>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2019 <strong>RubiksTimeTracker</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
